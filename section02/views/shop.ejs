<%- include('includes/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
    <%- include('includes/navigation.ejs') %>

    <main>
        <% if (prods.length > 0) { %>
            <div class="grid">
                <% for (let product of prods) { %>
                    <article class="card product-item">
                        <header class="card__header">
                            <h1 class="title"><%= product.title %></h1>
                        </header>
                        <div class="card__image">
                            <img src="data:../images/reading5.jpeg" alt="A Book">
                        </div>
                        <div class="card__content">
                            <h2 class="price">$19.99</h2>
                            <p class="author">Charles Dickens</p>
                            <p class="description">A very interesting book about so many even more interesting things!</p>
                            <p class="rating">8/10</p>
                        </div>
                        <div class="card__actions">
                            <button class="btn">Add to Cart</button>
                        </div>
                    </article>
                <% } %>
            </div>
        <% } else { %>
            <h1>No Products Found!</h1>
        <% } %>
    </main>
<%- include('includes/end.ejs') %>