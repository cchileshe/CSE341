extends layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.title #{product.title}
                        div.card__image
                            img(src="data: /images/reading4.jpeg", alt="A Book")
                        div.card__content
                            h2.price #{product.price}
                            p.author #{product.author}
                            p.rating #{product.rating}
                            p.description #{product.description}
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products